<resources>

    <style name="Base.Theme.Dumb_password" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>

        <!-- Theme Colors -->
        <item name="textColor">@color/white_300</item>

        <item name="containerColor">@color/black_100</item>
        <item name="cardColor">@color/black_400</item>

        <item name="colorAccent">@color/blue_400</item>

        <!-- View Themes -->
        <item name="floatingActionButtonStyle">@style/Base.FloatingButton</item>
    </style>

    <!-- View Styles -->
    <style name="Base.FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">6dp</item>
        <item name="backgroundTint">?attr/cardColor</item>
        <item name="tint">?attr/textColor</item>
        <item name="shapeAppearanceOverlay">@style/RoundedFabStyle</item>
    </style>
</resources>