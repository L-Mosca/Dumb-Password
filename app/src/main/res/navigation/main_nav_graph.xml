<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="br.com.moscatech.dumbpassword.ui.screens.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.moscatech.dumbpassword.ui.screens.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createPasswordFragment"
            app:destination="@id/createPasswordFragment"
            app:enterAnim="@anim/popup_enter"
            app:exitAnim="@anim/popup_exit"
            app:popEnterAnim="@anim/popup_pop_enter"
            app:popExitAnim="@anim/popup_pop_exit" />
    </fragment>

    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="br.com.moscatech.dumbpassword.ui.screens.create_password.CreatePasswordFragment"
        android:label="CreatePasswordFragment"
        tools:layout="@layout/fragment_create_password">
        <action
            android:id="@+id/action_createPasswordFragment_to_group_nav_graph"
            app:destination="@id/group_nav_graph" />
        <action
            android:id="@+id/action_createPasswordFragment_to_platform_nav_graph"
            app:destination="@id/platform_nav_graph" />
    </fragment>

    <include app:graph="@navigation/group_nav_graph" />
    <include app:graph="@navigation/platform_nav_graph" />
</navigation>