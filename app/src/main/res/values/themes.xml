<resources>

    <style name="Base.Theme.Dumb_password" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>

        <!-- Theme Colors -->
        <item name="textColor">@color/black_900</item>
        <item name="textColorSecondary">@color/gray_700</item>

        <item name="containerColor">@color/gray_300</item>
        <item name="cardColor">@color/white_400</item>
        <item name="popMenuBackgroundColor">@color/white_400</item>

        <item name="colorAccent">@color/blue_400</item>
        <item name="iconColor">@color/gray_900</item>
        <item name="errorColor">@color/red_400</item>

        <!-- View Themes -->
        <item name="floatingActionButtonStyle">@style/Base.FloatingButton</item>
        <item name="android:textViewStyle">@style/Base.TextView</item>
        <item name="materialCardViewStyle">@style/Base.MaterialCardView</item>
        <item name="cardViewStyle">@style/Base.CardView</item>
        <item name="buttonStyle">@style/Base.AppCompatButton</item>
        <item name="popupMenuStyle">@style/Base.PopMenu</item>
    </style>

    <style name="Theme.Dumb_password" parent="Base.Theme.Dumb_password" />

    <!-- View Styles -->
    <style name="Base.FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">6dp</item>
        <item name="backgroundTint">?attr/cardColor</item>
        <item name="tint">?attr/colorAccent</item>
        <item name="shapeAppearanceOverlay">@style/RoundedFabStyle</item>
    </style>

    <style name="RoundedFabStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Base.TextView" parent="Widget.AppCompat.TextView">
        <item name="textColor">?attr/textColor</item>
    </style>

    <style name="Base.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/cardColor</item>
    </style>

    <style name="Base.AppCompatButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:textColor">@color/white_400</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Base.PopMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_pop_menu</item>
        <item name="android:backgroundTint">?attr/cardColor</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:popupElevation">8dp</item>
    </style>
</resources>