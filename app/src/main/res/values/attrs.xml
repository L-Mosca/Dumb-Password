<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DayNightAppTheme">
        <!-- Text Color -->
        <attr name="textColor" format="color" />
        <attr name="textColorSecondary" format="color" />

        <!-- Background Color -->
        <attr name="containerColor" format="color" />
        <attr name="cardColor" format="color" />

        <attr name="colorAccent" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="errorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DefaultContainerView">
        <attr name="titleText" format="string" />
        <attr name="contentText" format="string" />
        <attr name="errorText" format="string" />
        <attr name="showError" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseAppBar">
        <attr name="title" format="string" />
    </declare-styleable>
</resources>